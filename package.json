{
  "private": true,
  "description": "My personal blog",
  "workspaces": [
    "packages/@blog/*",
    "packages/blog"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "dev": "yarn workspace @blog/source dev",
    "build": "yarn workspace @blog/source build -d $(pwd)/dist",
    "lint": "eslint packages --fix --ext .js,.vue"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.15.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-vue": "^5.2.2",
    "lerna": "^3.13.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4"
  }
}
